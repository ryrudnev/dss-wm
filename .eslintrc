{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
   },
   "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true,
    "modules": true
   },
   "rules": {
     "consistent-return": 0,
     "no-underscore-dangle": 0,
     "no-param-reassign": 0,
     "no-nested-ternary": 0,
     "react/no-multi-comp": 0,
     "react/prefer-es6-class": 0,
     "react/prop-types": [1, { "ignore": ["children", "className"] }]
   },
  "plugins": [
    "mocha"
  ]
}
