#################################################################
#
#    Добавление классов методов.
#
#################################################################

###  Сжигание. http://localhost/owl/wastemanage#Burn

:Burn rdf:type owl:Class ;

         owl:equivalentClass [ owl:intersectionOf ( :Util
                                                    [ rdf:type owl:Restriction ;
                                                      owl:onProperty :handleOf ;
                                                      owl:someValuesFrom :Burnable
                                                    ]
                                                  ) ;
                               rdf:type owl:Class
                             ] .

###  Признак сжигаемости. http://localhost/owl/wastemanage#Burnable

:Burnable rdf:type owl:Class ;

          owl:equivalentClass [ owl:intersectionOf ( :Utilable
                                                     [ rdf:type owl:Restriction ;
                                                       owl:onProperty :hasHandle ;
                                                       owl:someValuesFrom :Burn
                                                     ]
                                                   ) ;
                                rdf:type owl:Class
                              ] .


